# .env.example
# EKS 컨테이너 배포용 환경변수 설정

# 환경 구분
DJANGO_ENV=local

# Django 기본 설정
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# 데이터베이스 설정 (Local: PostgreSQL, Dev/Prod: Aurora PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=fablink_db
DB_USER=fablink_user
DB_PASSWORD=your-db-password
DB_HOST=your-database-host
DB_PORT=5432

# DynamoDB 설정 (Dev/Prod 환경에서만 사용)
USE_DYNAMODB=False
DYNAMODB_REGION=ap-northeast-2
DYNAMODB_TABLE_PREFIX=fablink

# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:3000

# 인증 관련
JWT_SECRET_KEY=your-jwt-secret-key

# AWS S3 설정
USE_S3=False
AWS_STORAGE_BUCKET_NAME=fablink-uploads
AWS_S3_REGION_NAME=ap-northeast-2

# 로깅 설정
LOG_LEVEL=INFO

# 보안 설정 (Prod 환경에서만 True)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# 모니터링
SENTRY_DSN=
SENTRY_ENVIRONMENT=local

# 외부 API 설정
OPENAI_API_KEY=your-openai-api-key
PAYMENT_GATEWAY_API_KEY=your-payment-api-key
PAYMENT_GATEWAY_SECRET=your-payment-secret

# MongoDB 설정
MONGODB_URI=mongodb://localhost:9000
MONGODB_DB=fablink
MONGODB_COLLECTION_DESIGNER=designer_orders
MONGODB_COLLECTION_FACTORY=factory_orders
